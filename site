    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // ==================================================
            // == 設定エリア (非エンジニアもここを修正) ==
            // ==================================================
            const config = {
                step1Answers: [ "こたえ", "こたえ", "こたえ", "こたえ", "こたえ", "こたえ", "こたえ" ],
                step2Answer: "みくしいなぞとき",
                slackUrl: "https://mixigroup.enterprise.slack.com/archives/CKE9M28P8"
            };
            // ==================================================
            // == ↑↑↑ 設定はここまで ↑↑↑ ==
            // ==================================================

            const step1 = document.getElementById('step1');
            const step2 = document.getElementById('step2');
            const step3 = document.getElementById('step3');
            const stepSecretClear = document.getElementById('step-secret-clear');

            const step1Inputs = Array.from({ length: 7 }, (_, i) => document.getElementById(`q${i + 1}`));
            const checkStep1Btn = document.getElementById('check-step1');
            const feedbackMessage = document.getElementById('feedback-message');
            
            const summaryContainer = document.getElementById('step1-answers-summary');

            const finalInput = document.getElementById('final-q');
            const checkStep2Btn = document.getElementById('check-step2');
            const finalFeedbackMessage = document.getElementById('final-feedback-message');
            
            const slackLink = document.getElementById('slack-link');
            const secretSlackLink = document.getElementById('secret-slack-link');

            slackLink.href = config.slackUrl;
            secretSlackLink.href = config.slackUrl;
            
            checkStep1Btn.addEventListener('click', function() {
                const userAnswers = step1Inputs.map(input => input.value.trim());

                const isSecretClear = userAnswers.every(answer => answer === "ひらがな");
                if (isSecretClear) {
                    step1.classList.add('hidden');
                    stepSecretClear.classList.remove('hidden');
                    return;
                }

                const userAnswersLower = userAnswers.map(ans => ans.toLowerCase());
                const correctAnswers = config.step1Answers.map(ans => ans.toLowerCase());
                
                const incorrectQuestions = [];
                for (let i = 0; i < userAnswersLower.length; i++) {
                    if (userAnswersLower[i] !== correctAnswers[i]) {
                        incorrectQuestions.push(`謎${i + 1}`);
                    }
                }

                if (incorrectQuestions.length === 0) {
                    let summaryHtml = '<h3>7つの謎の答え</h3><table class="summary-table">';
                    userAnswers.forEach((answer, index) => {
                        summaryHtml += `<tr><th>謎${index + 1}</th><td>${answer}</td></tr>`;
                    });
                    summaryHtml += '</table>';
                    summaryContainer.innerHTML = summaryHtml;

                    step1.classList.add('hidden');
                    step2.classList.remove('hidden');

                } else {
                    feedbackMessage.textContent = `${incorrectQuestions.join('と')}が違います。`;
                }
            });

            checkStep2Btn.addEventListener('click', function() {
                const userAnswer = finalInput.value.trim().toLowerCase();
                const correctAnswer = config.step2Answer.toLowerCase();

                if (userAnswer === correctAnswer) {
                    step2.classList.add('hidden');
                    step3.classList.remove('hidden');
                } else {
                    finalFeedbackMessage.textContent = "答えが違うようです。";
                    setTimeout(() => {
                        finalFeedbackMessage.textContent = "";
                    }, 1500);
                }
            });
        });
    </script>

</body>
